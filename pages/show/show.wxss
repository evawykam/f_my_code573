.banner {
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  padding: 0 30rpx;
  background-color: pink !important;
  height: 500rpx;
  /* height: 100vh; */
  text-align: center;
}

.banner .h1 {
  margin: 0;
  color: white;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  font-size: 32px;
  font-weight: bold;
}

.banner .p {
  font-size: 20px;
  color: white;
  opacity: .7;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  height: 30vh;
  overflow: scroll;
}

.btn-flat {
  color: white;
  padding: 8px 24px;
  border-radius: 4px;
  background: #1EDD88;
  transition: background 0.3s ease;
}

.row-center {
  display: flex; justify-content: space-between; align-items: center;
}

.action-btn {
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 0 20rpx rgba(0,0,0,0.3);
  padding: 15rpx;
  width: 50rpx; height: 50rpx;
}

form {
  padding: 50rpx;
  width: 80vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.section {
  box-shadow: 2rpx 2rpx 10rpx lightgrey;
  margin-top: 50rpx;
  padding: 20rpx;
}

.btn-area {
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
}

button {
  width: 20vw;
}